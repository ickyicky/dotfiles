# easy acces
alias aliases='cat ~/.config/aliasrc'
alias editalias='vim ~/.config/aliasrc'

# just for security
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# program shortcuts
alias dc='docker-compose'
