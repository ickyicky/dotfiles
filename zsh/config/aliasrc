alias grep='grep --color=auto'
alias killdocker='docker kill $(docker ps -q)'
alias ls='exa --icons'
alias ll='ls -lh'
alias la='ls -a'
alias lla='ls -lha'
alias l='ls'
alias vim='nvim'
alias py='python'
alias ipy='ipython'
alias f="firefox"
alias netflix="firefox netflix.com"
alias c="chromium"

